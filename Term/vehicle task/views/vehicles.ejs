<!DOCTYPE html>
<html>
<head>
  <title>Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h1 class="mb-4">Vehicles</h1>
  <% if (isAdmin) { %>
    <a class="btn btn-success mb-3" href="/vehicles/new">Add Vehicle</a>
  <% } %>
  <div class="row">
    <% vehicles.forEach(v => { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= v.image %>" class="card-img-top" height="200">
          <div class="card-body">
            <h5 class="card-title"><%= v.name %> - <%= v.brand %></h5>
            <p class="card-text">Type: <%= v.type %><br>Price: $<%= v.price %></p>
            <% if (isAdmin) { %>
              <a href="/vehicles/<%= v._id %>/edit" class="btn btn-primary">Edit</a>
              <form method="POST" action="/vehicles/<%= v._id %>?_method=DELETE" style="display:inline;">
                <button class="btn btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>
